# Dockerfile - Assistant MJ Les Lames du Cardinal
FROM python:3.11-slim

# Variables d'environnement
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Installer les dépendances système
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Créer un utilisateur non-root
RUN useradd -m -u 1000 mjuser && \
    mkdir -p /app /data && \
    chown -R mjuser:mjuser /app /data

# Définir le répertoire de travail
WORKDIR /app

# Copier les fichiers de requirements
COPY --chown=mjuser:mjuser requirements.txt .

# Installer les dépendances Python
RUN pip install --no-cache-dir -r requirements.txt

# Copier le code de l'application
COPY --chown=mjuser:mjuser . .

# Créer la structure de dossiers
RUN mkdir -p /data/Data /data/Characters /data/lames_db \
    /data/saved_sessions /data/memory && \
    chown -R mjuser:mjuser /data

# Passer à l'utilisateur non-root
USER mjuser

# Exposer le port Streamlit
EXPOSE 8501

# Healthcheck
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8501/_stcore/health || exit 1

# Point d'entrée
ENTRYPOINT ["streamlit", "run", "app.py"]
CMD ["--server.port=8501", "--server.address=0.0.0.0", "--server.headless=true"]